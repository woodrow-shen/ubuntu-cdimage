"""Build a set of images for a project/series/image-type."""

from optparse import OptionParser
import os
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))


def main():
    from cdimage.build import build_image_set
    from cdimage.config import Config

    parser = OptionParser("%prog [--live] [IMAGE_TYPE]")
    parser.add_option(
        "--live", default=False, action="store_true",
        help="build live filesystems first")
    options, args = parser.parse_args()
    config = Config()
    if args:
        config["IMAGE_TYPE"] = args[0]
    if not build_image_set(config, options):
        sys.exit(1)


if __name__ == "__main__":
    main()
