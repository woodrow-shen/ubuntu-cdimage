"""Copy debian-cd task lists into place."""

from optparse import OptionParser
import os
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))
from cdimage.config import Config
from cdimage.germinate import GerminateOutput


def main():
    parser = OptionParser("%prog IMAGE_TYPE")
    _, args = parser.parse_args()
    if len(args) < 1:
        parser.error("need date")
    if len(args) < 2:
        parser.error("need image-type")
    date = args[0]
    config = Config(IMAGE_TYPE=args[1])
    directory = os.path.join(
        config.root, "scratch", config.project, config.series,
        config.image_type, "germinate")
    germinate_output = GerminateOutput(config, directory)
    germinate_output.update_tasks(date)


if __name__ == "__main__":
    main()
